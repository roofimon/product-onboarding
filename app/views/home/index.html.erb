<div class="home-container">
  <div class="home-content">
    <header class="home-header">
      <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
        <div>
          <h1>Welcome to ODT Auction Platform</h1>
          <p class="subtitle">Hello, <%= @user.name %> <%= @user.surname %>! You're successfully logged in.</p>
        </div>
        <div style="display: flex; align-items: center; gap: var(--spacing-md);">
          <span style="color: var(--color-text-secondary); font-size: 0.875rem;"><%= @user.email %></span>
          <%= link_to logout_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to logout?" }, class: "btn btn-secondary", style: "white-space: nowrap;" do %>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: var(--spacing-xs); vertical-align: middle;">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4M16 17l5-5-5-5M21 12H9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Logout
          <% end %>
        </div>
      </div>
    </header>

    <div class="home-sections">
      <div class="section-card">
        <div class="card-icon">
          <svg width="48" height="48" fill="var(--color-primary)" viewBox="0 0 24 24">
            <path d="M20 6h-2.18c.11-.31.18-.65.18-1a2.996 2.996 0 0 0-5.5-1.65l-.5.67-.5-.68C10.96 2.54 10 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 15H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 11 8.76l1-1.36 1 1.36L15.38 12 17 10.83 14.92 8H20v6z"/>
          </svg>
        </div>
        <h3>Product</h3>
        <p>Create and manage your products. View all available products on the platform.</p>
        <%= link_to products_path, class: "card-link" do %>
          View Products →
        <% end %>
      </div>

      <div class="section-card">
        <div class="card-icon">
          <svg width="48" height="48" fill="var(--color-success)" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3>Your Profile</h3>
        <p>Manage your account settings and personal information.</p>
        <a href="#" class="card-link">View Profile →</a>
      </div>

      <div class="section-card">
        <div class="card-icon">
          <svg width="48" height="48" fill="var(--color-warning)" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
          </svg>
        </div>
        <h3>Analytics</h3>
        <p>View your activity and progress on the platform.</p>
        <a href="#" class="card-link">View Analytics →</a>
      </div>

      <div class="section-card">
        <div class="card-icon">
          <svg width="48" height="48" fill="var(--color-info)" viewBox="0 0 24 24">
            <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
        </div>
        <h3>Support</h3>
        <p>Get help and contact our support team if needed.</p>
        <a href="#" class="card-link">Contact Support →</a>
      </div>
    </div>

    <div class="home-actions">
      <h3>Quick Actions</h3>
      <div class="action-buttons">
        <%= link_to new_product_path, class: "btn btn-primary" do %>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: var(--spacing-xs); vertical-align: middle;">
            <path d="M12 5v14m7-7H5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Create Product
        <% end %>
        <%= link_to products_path, class: "btn btn-secondary" do %>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: var(--spacing-xs); vertical-align: middle;">
            <path d="M20 6h-2.18c.11-.31.18-.65.18-1a2.996 2.996 0 0 0-5.5-1.65l-.5.67-.5-.68C10.96 2.54 10 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          View Products
        <% end %>
        <%= link_to logout_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to logout?" }, class: "btn btn-danger" do %>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: var(--spacing-xs); vertical-align: middle;">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4M16 17l5-5-5-5M21 12H9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Logout
        <% end %>
      </div>
    </div>
  </div>
</div>