<div class="auth-container" id="login-container">
  <div class="auth-card" id="login-card">
    <h1 class="auth-title" id="login-title">Sign In</h1>
    
    <% if flash[:alert] %>
      <div class="alert alert-error" id="login-alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, method: :post, local: true, class: "auth-form", id: "login-form" do |f| %>
      <div class="form-group" id="login-email-group">
        <%= f.label :email, "Email", class: "form-label", id: "login-email-label" %>
        <%= f.email_field :email, class: "form-input", id: "login-email", placeholder: "Enter your email", required: true, autofocus: true %>
      </div>

      <div class="form-group" id="login-password-group">
        <%= f.label :password, "Password", class: "form-label", id: "login-password-label" %>
        <%= f.password_field :password, class: "form-input", id: "login-password", placeholder: "Enter your password", required: true %>
      </div>

      <div class="form-actions" id="login-form-actions">
        <%= f.submit "Sign In", class: "btn btn-primary btn-block", id: "login-submit" %>
      </div>
    <% end %>

    <div class="auth-links" id="login-links">
      Don't have an account? <%= link_to "Sign up", signup_path, id: "login-signup-link" %>
    </div>
  </div>
</div>
