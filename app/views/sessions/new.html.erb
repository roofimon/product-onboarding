<div class="auth-container" data-testid="login-container">
  <div class="auth-card" data-testid="login-card">
    <h1 class="auth-title" data-testid="login-title">Sign In</h1>
    
    <% if flash[:alert] %>
      <div class="alert alert-error" data-testid="login-alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, method: :post, local: true, class: "auth-form", data: { testid: "login-form" } do |f| %>
      <div class="form-group" data-testid="login-email-group">
        <%= f.label :email, "Email", class: "form-label", data: { testid: "login-email-label" } %>
        <%= f.email_field :email, class: "form-input", data: { testid: "login-email" }, placeholder: "Enter your email", required: true, autofocus: true %>
      </div>

      <div class="form-group" data-testid="login-password-group">
        <%= f.label :password, "Password", class: "form-label", data: { testid: "login-password-label" } %>
        <%= f.password_field :password, class: "form-input", data: { testid: "login-password" }, placeholder: "Enter your password", required: true %>
      </div>

      <div class="form-actions" data-testid="login-form-actions">
        <%= f.submit "Sign In", class: "btn btn-primary btn-block", data: { testid: "login-submit" } %>
      </div>
    <% end %>

    <div class="auth-links" data-testid="login-links">
      Don't have an account? <%= link_to "Sign up", signup_path, data: { testid: "login-signup-link" } %>
    </div>
  </div>
</div>
