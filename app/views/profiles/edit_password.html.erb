<div class="home-container">
  <div class="home-content">
    <header class="home-header">
      <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
        <div>
          <h1>Change Password</h1>
          <p class="subtitle">Update your account password</p>
        </div>
        <div style="display: flex; align-items: center; gap: var(--spacing-md);">
          <%= link_to profile_path, class: "btn btn-secondary", style: "white-space: nowrap;" do %>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: var(--spacing-xs); vertical-align: middle;">
              <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Cancel
          <% end %>
        </div>
      </div>
    </header>

    <div class="content-section" style="margin-top: var(--spacing-xl); max-width: 600px; margin-left: auto; margin-right: auto;">
      <div class="section-card" style="text-align: left;">
        <% if flash[:alert] %>
          <div class="alert alert-error" style="margin-bottom: var(--spacing-lg);">
            <%= flash[:alert] %>
          </div>
        <% end %>
        
        <% if @user.errors.any? %>
          <div class="alert alert-error" style="margin-bottom: var(--spacing-lg);">
            <h4><%= pluralize(@user.errors.count, "error") %> prohibited this password from being changed:</h4>
            <ul style="margin-top: var(--spacing-sm); padding-left: var(--spacing-lg);">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @user, url: update_password_profile_path, method: :patch, local: true, class: "auth-form" do |f| %>
          <div class="form-group">
            <%= f.label :current_password, "Current Password", class: "form-label" %>
            <%= f.password_field :current_password, class: "form-input", placeholder: "Enter your current password", required: true, autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.label :password, "New Password", class: "form-label" %>
            <%= f.password_field :password, class: "form-input", placeholder: "Enter your new password (min. 6 characters)", required: true %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-input", placeholder: "Confirm your new password", required: true %>
          </div>

          <div class="form-actions">
            <%= f.submit "Update Password", class: "btn btn-primary btn-block" %>
            <%= link_to "Cancel", profile_path, class: "btn btn-secondary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

