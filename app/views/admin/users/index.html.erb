<div class="admin-layout">
  <!-- Sidebar -->
  <div class="admin-sidebar">
    <div class="admin-logo">
      <h2>Admin Panel</h2>
    </div>
    
    <nav class="admin-nav">
      <ul>
        <li class="nav-item">
          <%= link_to admin_dashboard_path, class: "nav-link" do %>
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
            </svg>
            Dashboard
          <% end %>
        </li>
        <li class="nav-item active">
          <%= link_to admin_users_path, class: "nav-link" do %>
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
            </svg>
            Users
          <% end %>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
            </svg>
            Analytics
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z"/>
            </svg>
            Settings
          </a>
        </li>
      </ul>
    </nav>

    <div class="admin-user">
      <div class="user-info">
        <div class="user-avatar">
          <%= current_user.name.first.upcase %>
        </div>
        <div class="user-details">
          <div class="user-name"><%= current_user.name %> <%= current_user.surname %></div>
          <div class="user-role">Administrator</div>
        </div>
      </div>
      <%= link_to logout_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to logout?" }, class: "logout-btn" do %>
        <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4M16 17l5-5-5-5M21 12H9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Logout
      <% end %>
    </div>
  </div>

  <!-- Main Content -->
  <div class="admin-main">
    <header class="admin-header">
      <h1>Users</h1>
      <div class="header-actions">
        <span class="welcome-text">Manage all users</span>
        <%= link_to logout_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to logout?" }, class: "btn btn-secondary", style: "margin-left: var(--spacing-md); white-space: nowrap;" do %>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: var(--spacing-xs); vertical-align: middle;">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4M16 17l5-5-5-5M21 12H9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Logout
        <% end %>
      </div>
    </header>

    <div class="admin-content">
      <!-- User Statistics -->
      <div class="stats-grid" style="margin-bottom: var(--spacing-xl);">
        <div class="stat-card">
          <div class="stat-icon bg-primary">
            <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
              <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
            </svg>
          </div>
          <div class="stat-content">
            <h3><%= @total_count %></h3>
            <p>Total Users</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon bg-warning">
            <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <div class="stat-content">
            <h3><%= @waiting_count %></h3>
            <p>Waiting Approval</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon bg-success">
            <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="stat-content">
            <h3><%= @active_count %></h3>
            <p>Active Users</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon bg-danger">
            <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
            </svg>
          </div>
          <div class="stat-content">
            <h3><%= @inactive_count %></h3>
            <p>Inactive Users</p>
          </div>
        </div>
      </div>

      <!-- Filters and Table Header -->
      <div class="content-section">
        <div class="section-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--spacing-lg); padding-bottom: var(--spacing-md); border-bottom: 2px solid var(--color-border);">
          <div>
            <h2 style="margin-bottom: var(--spacing-xs);">User Management</h2>
            <p style="color: var(--color-text-secondary); font-size: 0.875rem; margin: 0;">
              Showing <%= @users.count %> <%= params[:status].present? ? params[:status].humanize.downcase : 'total' %> user<%= @users.count != 1 ? 's' : '' %>
            </p>
          </div>
          <div class="filters" style="display: flex; gap: var(--spacing-sm); flex-wrap: wrap;">
            <%= link_to admin_users_path, class: "filter-link #{'active' if params[:status].blank?}" do %>
              <span>All</span>
              <span class="filter-count"><%= @total_count %></span>
            <% end %>
            <%= link_to admin_users_path(status: 'waiting_for_approve'), class: "filter-link #{'active' if params[:status] == 'waiting_for_approve'}" do %>
              <span>Waiting</span>
              <span class="filter-count"><%= @waiting_count %></span>
            <% end %>
            <%= link_to admin_users_path(status: 'active'), class: "filter-link #{'active' if params[:status] == 'active'}" do %>
              <span>Active</span>
              <span class="filter-count"><%= @active_count %></span>
            <% end %>
            <%= link_to admin_users_path(status: 'inactive'), class: "filter-link #{'active' if params[:status] == 'inactive'}" do %>
              <span>Inactive</span>
              <span class="filter-count"><%= @inactive_count %></span>
            <% end %>
          </div>
        </div>
        
        <div class="data-table">
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Joined</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if @users.any? %>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <div class="user-cell">
                        <div class="user-avatar small">
                          <%= user.name.first.upcase %>
                        </div>
                        <span><%= user.name %> <%= user.surname %></span>
                      </div>
                    </td>
                    <td><%= user.email %></td>
                    <td>
                      <span class="badge <%= user.admin? ? 'badge-primary' : 'badge-secondary' %>">
                        <%= user.admin? ? 'Admin' : 'User' %>
                      </span>
                    </td>
                    <td>
                      <span class="badge <%= case user.status.to_sym
                        when :waiting_for_approve
                          'badge-warning'
                        when :active
                          'badge-success'
                        when :inactive
                          'badge-danger'
                        else
                          'badge-secondary'
                        end %>">
                        <%= user.status.humanize.titleize %>
                      </span>
                    </td>
                    <td><%= user.created_at.strftime('%b %d, %Y') %></td>
                    <td>
                      <div class="action-buttons">
                        <button class="btn-icon" title="Edit">
                          <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                          </svg>
                        </button>
                        <button class="btn-icon text-danger" title="Delete">
                          <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                          </svg>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="6" style="text-align: center; padding: var(--spacing-xl); color: var(--color-text-secondary);">
                    No users found.
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
