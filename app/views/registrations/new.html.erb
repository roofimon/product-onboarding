<div class="auth-container" data-testid="registration-container">
  <div class="auth-card" data-testid="registration-card">
    <h1 class="auth-title" data-testid="registration-title">Create Account</h1>
    
    <% if flash[:alert] %>
      <div class="alert alert-error" data-testid="registration-alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <% if @user.errors.any? %>
      <div class="alert alert-error" data-testid="registration-errors">
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited this account from being created:</h4>
        <ul style="margin-top: var(--spacing-sm); padding-left: var(--spacing-lg);">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: signup_path, method: :post, local: true, class: "auth-form", data: { testid: "registration-form" } do |f| %>
      <div class="form-group" data-testid="registration-name-group">
        <%= f.label :name, "First Name", class: "form-label", data: { testid: "registration-name-label" } %>
        <%= f.text_field :name, class: "form-input", data: { testid: "registration-name" }, placeholder: "Enter your first name", required: true, autofocus: true %>
      </div>

      <div class="form-group" data-testid="registration-surname-group">
        <%= f.label :surname, "Last Name", class: "form-label", data: { testid: "registration-surname-label" } %>
        <%= f.text_field :surname, class: "form-input", data: { testid: "registration-surname" }, placeholder: "Enter your last name", required: true %>
      </div>

      <div class="form-group" data-testid="registration-email-group">
        <%= f.label :email, "Email", class: "form-label", data: { testid: "registration-email-label" } %>
        <%= f.email_field :email, class: "form-input", data: { testid: "registration-email" }, placeholder: "Enter your email", required: true %>
      </div>

      <div class="form-group" data-testid="registration-password-group">
        <%= f.label :password, "Password", class: "form-label", data: { testid: "registration-password-label" } %>
        <%= f.password_field :password, class: "form-input", data: { testid: "registration-password" }, placeholder: "Enter your password (min. 6 characters)", required: true %>
      </div>

      <div class="form-group" data-testid="registration-password-confirmation-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label", data: { testid: "registration-password-confirmation-label" } %>
        <%= f.password_field :password_confirmation, class: "form-input", data: { testid: "registration-password-confirmation" }, placeholder: "Confirm your password", required: true %>
      </div>

      <div class="form-actions" data-testid="registration-form-actions">
        <%= f.submit "Create Account", class: "btn btn-primary btn-block", data: { testid: "registration-submit" } %>
      </div>
    <% end %>

    <div class="auth-links" data-testid="registration-links">
      Already have an account? <%= link_to "Sign in", login_path, data: { testid: "registration-login-link" } %>
    </div>
  </div>
</div>
