<div class="shopping-container">
  <% image_urls = {
    "Vintage Watch Collection" => "https://images.unsplash.com/photo-1523275335684-37898b6baf30?auto=format&fit=crop&w=900&q=80",
    "Antique Furniture Set" => "https://images.unsplash.com/photo-1484101403633-562f891dc89a?auto=format&fit=crop&w=900&q=80",
    "Rare Coin Collection" => "https://images.unsplash.com/photo-1523292562811-8fa7962a78c8?auto=format&fit=crop&w=900&q=80",
    "Designer Handbag" => "https://images.unsplash.com/photo-1507679799987-c73779587ccf?auto=format&fit=crop&w=900&q=80",
    "Vintage Vinyl Records" => "https://images.unsplash.com/photo-1516280440614-37939bbacd81?auto=format&fit=crop&w=900&q=80",
    "Art Painting" => "https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&w=900&q=80",
    "Collectible Comic Books" => "https://images.unsplash.com/photo-1489515217757-5fd1be406fef?auto=format&fit=crop&w=900&q=80"
  } %>

  <!-- Products Section -->
  <div class="products-wrapper">
    <% if @products.any? %>
      <div class="products-header">
        <h2 class="products-title">
          <% if params[:search].present? %>
            Search Results (<%= @pagy.count %>)
          <% else %>
            All Products (<%= @pagy.count %>)
          <% end %>
        </h2>
        <div class="sort-controls">
          <%= form_with url: root_path, method: :get, local: true, class: "sort-form" do |f| %>
            <%= f.hidden_field :search, value: params[:search] if params[:search].present? %>
            <%= f.label :sort, "Sort by:", class: "sort-label" %>
            <%= f.select :sort, 
                  options_for_select([
                    ['Newest First', ''],
                    ['Price: Low to High', 'price_low_high'],
                    ['Price: High to Low', 'price_high_low']
                  ], params[:sort]),
                  {},
                  { 
                    class: "sort-select",
                    onchange: "this.form.submit();"
                  } %>
          <% end %>
        </div>
      </div>

      <div class="products-grid">
        <% @products.each do |product| %>
          <% cache product do %>
            <%= render partial: 'product_card', locals: { product: product, image_urls: image_urls } %>
          <% end %>
        <% end %>
      </div>

      <% if @pagy.pages > 1 %>
        <div class="pagination-wrapper">
          <%== pagy_nav(@pagy) %>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <div class="empty-icon">
          <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="9" y1="3" x2="9" y2="21"></line>
            <line x1="3" y1="9" x2="21" y2="9"></line>
          </svg>
        </div>
        <% if params[:search].present? %>
          <h3 class="empty-title">No products found</h3>
          <p class="empty-message">
            No products match your search "<strong><%= params[:search] %></strong>"
          </p>
          <%= link_to "Clear search", root_path, class: "btn btn-primary" %>
        <% else %>
          <h3 class="empty-title">No products available</h3>
          <p class="empty-message">Be the first to register a product!</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
.shopping-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: var(--spacing-xl) var(--spacing-lg);
  background-color: var(--color-bg);
  min-height: 100vh;
}

/* Products Section */
.products-wrapper {
  margin-top: var(--spacing-xl);
}

.products-header {
  margin-bottom: var(--spacing-xl);
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--spacing-md);
}

.products-title {
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--color-text);
  margin: 0;
}

.sort-controls {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.sort-form {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.sort-label {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--color-text);
  margin: 0;
}

.sort-select {
  padding: var(--spacing-sm) var(--spacing-md);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  font-size: 0.875rem;
  background: white;
  color: var(--color-text);
  cursor: pointer;
  transition: all 0.2s;
  min-width: 180px;
}

.sort-select:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(0, 82, 255, 0.1);
}

.sort-select:hover {
  border-color: var(--color-primary);
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: var(--spacing-xl);
  margin-top: var(--spacing-lg);
}

/* Product Card */
.product-card {
  background: white;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  cursor: pointer;
  border: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
}

.product-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--color-primary);
}

.product-image {
  width: 100%;
  height: 220px;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.product-image-placeholder {
  color: var(--color-text-secondary);
  opacity: 0.5;
}

.product-info {
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: var(--spacing-md);
}

.product-name {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--color-text);
  margin: 0;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-description {
  font-size: 0.875rem;
  color: var(--color-text-secondary);
  line-height: 1.5;
  margin: 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-seller {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: 0.75rem;
  color: var(--color-text-secondary);
  margin-top: auto;
}

.product-seller svg {
  color: var(--color-text-secondary);
}

.product-pricing {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
  padding: var(--spacing-md);
  background: var(--color-bg-secondary);
  border-radius: var(--radius-md);
  margin-top: auto;
}

.price-main {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.price-label {
  font-size: 0.75rem;
  color: var(--color-text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.price-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--color-primary);
}

.price-bid {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.bid-label {
  font-size: 0.75rem;
  color: var(--color-text-secondary);
}

.bid-value {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--color-success);
}

.product-action {
  margin-top: var(--spacing-sm);
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--color-border);
}

.view-details {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--color-primary);
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  transition: all 0.2s;
}

.product-card:hover .view-details {
  color: var(--color-primary-hover);
  transform: translateX(4px);
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: var(--spacing-2xl) var(--spacing-lg);
  margin-top: var(--spacing-2xl);
}

.empty-icon {
  color: var(--color-text-secondary);
  opacity: 0.3;
  margin-bottom: var(--spacing-lg);
}

.empty-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: var(--spacing-md);
}

.empty-message {
  font-size: 1rem;
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-xl);
}

/* Pagination */
.pagination-wrapper {
  margin-top: var(--spacing-2xl);
  display: flex;
  justify-content: center;
  padding: var(--spacing-lg) 0;
}

.pagy-nav {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  list-style: none;
  padding: 0;
  margin: 0;
}

.pagy-nav .page,
.pagy-nav .prev,
.pagy-nav .next {
  display: inline-block;
}

.pagy-nav a,
.pagy-nav span {
  display: inline-block;
  padding: var(--spacing-sm) var(--spacing-md);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  color: var(--color-text);
  text-decoration: none;
  transition: all 0.2s;
  background: white;
  font-size: 0.875rem;
  font-weight: 500;
}

.pagy-nav a:hover {
  background: var(--color-primary);
  color: white;
  border-color: var(--color-primary);
  transform: translateY(-1px);
  box-shadow: var(--shadow-sm);
}

.pagy-nav .page.active span {
  background: var(--color-primary) !important;
  color: white !important;
  border-color: var(--color-primary) !important;
  cursor: default;
}

.pagy-nav .disabled {
  color: var(--color-text-secondary);
  opacity: 0.5;
  cursor: not-allowed;
  pointer-events: none;
}

@media (max-width: 768px) {
  .products-grid {
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: var(--spacing-lg);
  }
  
  .products-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .sort-controls {
    width: 100%;
  }
  
  .sort-select {
    width: 100%;
    min-width: auto;
  }
}
</style>
